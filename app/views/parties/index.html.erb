<h2>現場一覧</h2>

<%= link_to "現場を新規登録", new_party_path, class: "btn btn-info" %>

<% if @parties.any? %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>日時(開始時間)</th>
				<th>最寄り駅</th>
			</tr>
		</thead>
		<tbody>
			<% @parties.each do |party| %>
				<tr>
					<td><%= party.party_start %></td>
					<td><%= party.station %></td>
					<td><%= link_to "削除", party_path(party), method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %></td>
					<td><%= link_to "手配", tehai_party_path(party) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>