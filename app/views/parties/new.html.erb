<h2>現場登録</h2>

<div class="row">
	<div class="col-xs-offset-3 col-xs-6">
		
		<%= form_for(@party) do |f| %>
			<%= render "layouts/error_messages", model: f.object %>
			
			<div class="form-group">
				<%= f.label :party_start, "日時(開始時間)" %>
				<%= f.text_field :party_start class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :station, "最寄り駅" %>
				<%= f.text_field :station, class: "form-control" %>
			</div>
			
			<%= f.submit "登録", class: "btn btn-primary btn-block" %>
			
		<% end %>
		
	</div>
</div>