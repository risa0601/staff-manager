<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
			<h1>パスワードリセット申請</h1>
			<%= form_tag url: password_resets_path, local: true, method: :post do %>
				<div class="field form-group">
					<%= label_tag :email, "登録済みのメールアドレス" %>
					<%= text_field_tag :email, "", class: "form-control" %>
					<div class="action text-left">
						<%= submit_tag "パスワード再設定メールを送信", class: "btn btn-o" %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>