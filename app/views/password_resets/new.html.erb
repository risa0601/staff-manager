<div class="container">
	<div class="row">
		<div class="col-xs-offset-3 col-xs-6">
			<h1>パスワードリセット申請</h1>
			<%= form_with url: password_reset_path, local: true, method: :post do |form| %>
				<div class="field">
					<%= form.label :メールアドレス %>
					<%= form.text_field :email, class: "form-control" %>
					<%= form.submit "送信", class: "btn btn-primary" %>
				</div>
			<% end %>
		</div>
	</div>
</div>