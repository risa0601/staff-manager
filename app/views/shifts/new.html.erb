<h4><%= current_user.name %>さん</h4>
<h2>シフト提出</h2>

<div class="row">
	<div class="col-xs-offsest-1 col-xs-9">
		
		<%= form_for(@shift) do |f| %>
		<table class="table">
			<thead>
				<tr>
					<th>>日付</th>
					<th>シフト希望</th>
					<th>コメント</th>
				</tr>
			</thead>
			<tbody>
				<td><%= f.text_field :date, class: "form-control" %></td>
				<td><%= f.check_box :category, class: "form-control" %></td>
				<td><%= f.text_field :content, class: "form-control" %></td>
			</tbody>
		</table>
		<div class="text-right">
			<%= f.submit "登録", class: "btn btn-primary" %>
		</div>
	</div>
</div>