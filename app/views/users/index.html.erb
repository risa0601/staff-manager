<p id="notice"><%= notice %></p>

<h2>スタッフ一覧</h2>
<%= link_to "スタッフ新規登録", new_user_path, class: "btn btn-info" %>
<div class="search-form">
	<%= form_tag(users_path, method: :get, local: true) do %>
		<div class="field">
			<%= label_tag :name, "No ." %>
			<%= text_field_tag :staff_no, params[:staff_no] %>
		</div>
		<div class="field">
			<%= label_tag :name, "名前" %>
			<%= text_field_tag :name, params[:name] %>
		</div>
		<div class="actions">
			<%= submit_tag "検索" %>
		</div>
	<% end %>
</div>

<% if @users.any? %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>スタッフ№</th>
				<th>氏名</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%= user.staff_no %></td>
					<td><%= link_to user.name, user %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>